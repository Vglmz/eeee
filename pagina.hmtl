    <script>
        // Funcionalidad para desplegar la carta
        const card = document.getElementById('my-card');
        const cardContent = document.getElementById('card-content');
        
        card.addEventListener('click', function(e) {
            // Evitar que los clics en el contenido desplegado o en los botones cierren la carta
            if (e.target.tagName === 'BUTTON' || e.target.tagName === 'INPUT' ||
                (e.target.closest('.card-content') && e.target !== cardContent)) {
                return;
            }
            
            // Alternar la visibilidad del contenido
            if (cardContent.style.display === 'block') {
                cardContent.style.display = 'none';
            } else {
                cardContent.style.display = 'block';
            }
        });
